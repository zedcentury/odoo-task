        <record id="my_teacher_tree" model="ir.ui.view">
            <field name="name">my_teacher.tree</field>
            <field name="model">my_teacher</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="age"/>
                    <field name="phone_number"/>
                    <field name="address"/>
                </tree>
            </field>
        </record>

        <record id="my_teacher_kanban" model="ir.ui.view">
            <field name="name">my_teacher.tree</field>
            <field name="model">my_teacher</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click" style="border-radius: 8px; padding: 12px;">
                                <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                                    <strong>Full name</strong>
                                    <field name="full_name"/>
                                </div>
                                <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                                    <strong>Age</strong>
                                    <field name="age"/>
                                </div>
                                <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                                    <strong>Phone number</strong>
                                    <field name="phone_number"/>
                                </div>
                                <div style="display: flex; justify-content: space-between;">
                                    <strong>Address</strong>
                                    <field name="address"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <menuitem id="my_teacher_menu" name="Teachers" sequence="1" action="my_teacher_action"/>

